{{#if url}}
<div class="container m-3">
  <h4>Success! Please use this link:</h4>
  <a href="/urls/{{ url }}">http://localhost:3000/{{ url }}</a>
  <div class="d-grid gap-2 d-md-flex m-3">
    <a class="btn btn-secondary" href="/" role="button">Back</a>
    <button class="btn btn-primary" type="button">Copy</button>
  </div>
</div>
{{else}}
<form class="row g-3 mt-3 needs-validation" action="/urls" method="POST">
  <div class="col-md-4">
    <input type="url" class="form-control" name="url" placeholder="Input URL here" required>
  </div>
  <div class="col-12">
    <button class="btn btn-outline-primary" type="submit">Shorten</button>
  </div>
</form>
{{/if}}